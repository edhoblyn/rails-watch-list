<div class="banner d-flex align-items-center justify-content-center"
     style="background-image: linear-gradient(rgba(100, 64, 64, 0.3), rgba(0,0,0,0.3)),
            url('https://images.unsplash.com/photo-1489599849927-2ee91cede3ba?auto=format&fit=crop&w=1600&q=60');"
     id="banner">
  <div class="text-center text-white">
    <h1 class="display-4 fw-bold text-warning">Save any kind of movies</h1>
  </div>
</div>

<div class="container my-5">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h2>My Lists</h2>
    <%= link_to "New list", new_list_path, class: "btn btn-primary" %>
  </div>

  <div class="row g-4">
    <% @lists.each do |list| %>
      <div class="col-12 col-sm-6 col-lg-4">
        <%= link_to list_path(list), class: "text-decoration-none" do %>
          <% background_url =
               if list.photo.attached?
                 cl_image_path(list.photo.key, height: 300, width: 400, crop: :fill)
               else
                 "https://images.unsplash.com/photo-1489599849927-2ee91cede3ba?auto=format&fit=crop&w=800&q=60"
               end %>

          <div class="card-category"
               style="background-image: linear-gradient(rgba(100, 64, 64, 0.3), rgba(0,0,0,0.3)),
                      url('<%= background_url %>');">
            <span class="text-white fw-bold"><%= list.name %></span>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
